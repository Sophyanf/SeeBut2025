<Window x:Class="SeeBat2025.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeeBat2025"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:SeeBat2025"
        
        Title="MainWindow" Height="450" Width="600">


    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Resources/fonBlue.jpg"></ImageBrush>
    </Window.Background>


    <DockPanel x:Name="MainGrid" Background="Transparent">
        <StackPanel Orientation="Horizontal" RenderTransformOrigin="0.5,0.5" Width="783">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.374"/>
                    <RotateTransform/>
                    <TranslateTransform Y="2.614"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <StackPanel Orientation="Vertical">

              
                <Border BorderThickness="5" BorderBrush="#4a5d7c" Width="155" Height="155" Background="Transparent" HorizontalAlignment="Right" Margin="50,30,50,10">
                    <UniformGrid Name="fieldPlayer" Rows="10" Columns="10"/>
                </Border>
            </StackPanel>
            <Border BorderThickness="5" BorderBrush="#4a5d7c" Width="255" Height="255" Background="Transparent" HorizontalAlignment="Center" Margin="50,0,50 ,100">
                <UniformGrid Name="field1" Rows="10" Columns="10" />
            </Border>
            <Button Name="Comp" Width ="80" Height="40"/>
        </StackPanel>

    </DockPanel>
</Window>
