<Window x:Class="SeeBat2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeeBat2025"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:SeeBat2025"
        
        Title="MainWindow" Height="450" Width="800">


    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Resources/fon.jpg"></ImageBrush>
    </Window.Background>


    <DockPanel x:Name="MainGrid" Background="Transparent">
        <StackPanel Orientation="Vertical">

            <Button Name="Comp" Width ="80" Height="40"/>
            <Border BorderThickness="5" BorderBrush="#554f41" Width="155" Height="155" Background="Transparent" HorizontalAlignment="Right" Margin="50,200,50,10">
                <UniformGrid Name="fieldPlayer" Rows="10" Columns="10"/>
            </Border>
        </StackPanel>
        <Border BorderThickness="5" BorderBrush="#554f41" Width="255" Height="255" Background="Transparent" HorizontalAlignment="Right" Margin="0,10,50,10">
            <UniformGrid Name="field1" Rows="10" Columns="10" />
        </Border>

    </DockPanel>



</Window>
